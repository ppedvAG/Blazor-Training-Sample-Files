@page "/"
@namespace Training2.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Training2</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="_content/RazorClassLibrary1/styles.css" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>
    <button onclick="callBlazor()">call Blazor</button>
    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <div id="components-reconnect-modal">
        ...reconnect modal
    </div>
    <script src="_framework/blazor.server.js"></script>
    <script src="_content/RazorClassLibrary1/examplejsinterop.js"></script>
    <script>
        function callBlazor() {
         //  alert(DotNet.invokeMethodAsync("Training2","Demo"));
            DotNet.invokeMethodAsync("Training2","Demo").then((data) => alert(data))
                .catch((data) => console.log(data));
        }
    </script>
</body>
</html>
